    <head>
        <script>
            console.log('I am in script ' + "{{{info.location}}}");
            window.onload = function() {
            if("{{{info.job_type}}}" === "Internship"){
                console.log('inside if case')
                document.getElementById('intern').checked = true
            }
            if("{{{info.job_type}}}" === "Parttime"){
                document.getElementById('part-time').checked = true
            }
            if("{{{info.job_type}}}" === "Fulltime"){
                document.getElementById('full-time').checked = true
            }
            if("{{{info.salary_type}}}" === "yr"){
                document.getElementById('annual').checked = true
            }
             if("{{{info.salary_type}}}" === "hr"){
                document.getElementById('hourly').checked = true
            }
            };
        </script>
        <title>Edit Job Listing</title>
        <script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
