        <div class="container">
            <div class="center-box">
                <h1>Edit job listing</h1>
                    <div class="form-group">
                        <label for="job_id">Job ID</label><br>
                        <input type="text" name="job_id" id="job_id" placeholder="000" value = {{{job_id}}} required readonly class="line-input"/><br>
                    </div>
                <form  method="post" action="/editted/{{{job_id}}}" name= "joblisting-form" id="joblisting-form">
                    
                    <div class="form-group">
                        <label for="jobtitle">Job title</label><br>
                        <input type="text" name="job_title" id="jobtitle" placeholder="QA Engineer" value = "{{{job_title}}}" required class="line-input"/><br>
                    </div>
                     <div class="form-group">
                        <label for="company_name">Company</label><br>
                        <input type="text" name="company_name" id="company_name" placeholder="Google" value = "{{{info.company_name}}}" required class="line-input"/><br>
                    </div>
                    <div class="form-group">
                        <label for="salary-type">Salary type</label><br>
                        <input type="radio" name ="salary_type" id="hourly" value="hr"/>
                        <label for="hourly">Hourly</label>
                        <input type="radio" name ="salary_type" id="annual"  value="yr"/>
                        <label for="annual">Annual</label><br>
                    </div>
                    <div class="form-group">
                        <label for="salary-range">Salary range</label><br>
                        <input type="number" name ="salary_range_start" id="salaryrange-start" placeholder="Salary range start" value="{{{info.salary_range_start}}}" class="line-input"/><br>
                        <input type="number" name="salary_range_end" id="salaryrange-end" placeholder="Salary range end" value="{{{info.salary_range_end}}}" class="line-input"/><br><br>
                    </div>
                    <div class="form-group">
                        <label for="job-type">Job type</label><br>
                        <input type="radio" name ="job_type" id="full-time" value="Fulltime"/>
                        <label for="full-time">Full-time</label>
                        <input type="radio" name ="job_type" id="part-time" value="Parttime"/>
                        <label for="part-time">Part-time</label>
                        <input type="radio" name ="job_type" id="intern" value="Internship"/>
                        <label for="intern">Internship</label><br>
                    </div>
                    <div class="form-group">
                        <label for="location">Location</label><br>
                    <input type="text" name="location" id="location" placeholder="San Jose, CA" value="{{{info.location}}}" required class="line-input"/><br>
                    </div>
                    <div class="form-group">
                        <label for="experience">Experience</label><br>
                        <input type="text" name="experience" id="experience" placeholder="0-2 years" value="{{{info.experience}}}" class="line-input"/><br>
                    </div>
                    <div class="form-group">
                        <label for="expiration">Expiration date</label><br>
                        <input type="date" name="exp_date" id="expiration" value="{{{info.exp_date}}}" required/><br>
                    </div>
                    <div class="form-group">
                        <label for="description">Job description</label><br>
                        <input type="text" id="description" name="description" placeholder="Join Google's Summer 2022 internship program!" value="{{{info.description}}}" class="block-input"></textarea><br>
                    </div>
                    <div class="form-group">
                        <label for="qualifications_min">Minimum qualifications</label><br>
                        <input type="text" id="qualifications-min"  name="m_qualifications" placeholder="Pursuing a Bachelor's in Computer Science or related field." value="{{{info.m_qualifications}}}" required class="block-input"></textarea><br>
                    </div>
                    <div class="form-group">
                        <label for="qualifications_pref">Preferred qualifications</label><br>
                        <input type="text" id="qualifications-pref"  name="p_qualifications" placeholder="Proficient in Python" value="{{{info.p_qualifications}}}" required class="block-input"></textarea><br>
                    </div>
                    
                    <input type="button"  id="cancel"  value="Cancel" class="btn btn-outline-secondary">
                    <input type="submit" id="Save"  value="Save" class="btn btn-secondary btn-outline-dark">
                    
                </form>
            </div>
       </div>
    </body>
</html>